#c shell
#d Prompt with "hostname{username}command_number: ".

unuse -q `dk_rep 'prompt*'`

if [[ $_dk_op = "use" ]]; then
  setenv oldPS1 "${PS1:-\$ }"
  setenv Host ${Host:-$(hostname)}
  setenv PS1 "${Host%%.*}{${USER:-$LOGNAME}}\!: "
else # unuse
  setenv PS1 "${oldPS1:-\$ }"
  unsetenv oldPS1
  unsetenv Host
fi
