#c shell
#d Set up a basic prompt with the hostname embedded.

unuse -q `dk_rep 'prompt*'`

if [[ $_dk_op = "use" ]]; then
  setenv oldPS1 "${PS1:-\$ }"
  setenv Host ${Host:-$(hostname)}
  setenv PS1 ": ${Host%%.*}; " # strip domain name, if present.
else # unuse
  setenv PS1 "${oldPS1:-\$ }"
  unsetenv oldPS1
  unsetenv Host
fi
